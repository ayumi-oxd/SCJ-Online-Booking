@model SCJ.Booking.MVC.ViewModels.ScCaseSearchViewModel

@{
    ViewData["Title"] = "AvailableTimes";

    var courtFile = Model.CourtFiles?.Where(
        x => x.physicalFileId == Model.SelectedCaseId).FirstOrDefault();

    var fileNumber = courtFile?.courtClassCode + courtFile?.courtFileNumber;
}

<div class="my-5">
    <div class="my-3">
        <a asp-action="ConferenceType">Step 2: Choose Conference Type</a>
    </div>
    <h5>4 steps to complete your booking</h5>
    <h1>Step 3: Book Your Hearing</h1>

    <form method="post">
        <div class="my-4">
            <b>@(courtFile?.styleOfCause ?? "[No Style of Cause?]")</b>
            <div>@Model.GetCourtClass(courtFile?.courtClassCode)</div>
            <div>File Number: @Model.FullCaseNumber or @fileNumber?</div>
        </div>

        <h4>Available Times in @Model.BookingLocationName</h4>
        <p>Please choose a time below for your <b>@Model.HearingTypeName</b>.</p>
        <p>@ScHearingType.GetHearingType(Model.HearingTypeId)s are booked for @Model.HearingLengthMinutes minutes only.</p>

        <div id="VueAvailableTimes" class="availableTimesContainer">
            <availabletimes :location-id="@Model.BookingRegistryId"
                            :hearing-type="@Model.HearingTypeId">
            </availabletimes>
        </div>

        <button type="submit"
                class="btn btn-primary">
                Choose Time
        </button>
    </form>

